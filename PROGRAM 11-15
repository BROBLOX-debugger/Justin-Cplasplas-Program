#include <iostream>
using namespace std;

int main () {
  float gallons, liters;
    cout<<"Enter the number of gallons: ";
    cin>>gallons;
    liters = gallons * 3.7854;
    cout<<"The " <<gallons<<" gallons is equivalent to "<<liters<<" liters";
}

